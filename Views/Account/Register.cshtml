@model RegisterInput;

<div>
    <div class="page-header">
        <h1>Register</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Register</h3>
                    </div>
                    <div class="panel-body">

                        <form asp-route="Register" method="post" >
                            <input type="hidden" asp-for="ReturnUrl">

                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <label asp-for="PasswordAgain"></label>
                                    <input type="password" class="form-control" placeholder="Password" asp-for="PasswordAgain" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary" name="button" value="register">Register</button>
                                    <button class="btn btn-default" name="button" value="cancel">Cancel</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
        </div>
    </div>
</div>