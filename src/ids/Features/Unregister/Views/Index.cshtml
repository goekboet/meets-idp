@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Layout/MaterialUi.cshtml";
}

@namespace Ids.Unregister
@model OidcLogin

<h1>Delete</h1>
<h5>Are you sure?</h5>
<p>If you really want to delete your account please confirm below. We will email you further instructions on how to
    proceed.</p>
@if(!ViewData.ModelState.IsValid)
{
    <i>There was a technical error, please try again later.</i>
}
<form 
    class="section" 
    asp-controller="Unregister" 
    asp-action="RequestEmailVerification" 
    method="POST">
    <button class="btn" name="forgot-submit" value="submit">Yes</button>
    <a class="btn-flat" asp-controller="ProfileSpa" asp-action="Index" asp-route-returnUrl="@Model.ReturnUrl"> No</a>
</form>