@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@namespace Ids.Unregister
@model UnregisterRequest

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="root-view">
    <div class="content heavy">
        <h1>Delete your account</h1>
    </div>
    <div class="content light">
        <h2>What's your email?</h2>
        <form asp-controller="Unregister" asp-action="RequestEmailVerification" method="POST">
            <div class="forminput">
                <label asp-for="Email" class="control-label"></label>
                <input type="text" class="form-control" placeholder="Email" asp-for="Email" autofocus>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="formbuttons">
                <partial name="_ValidationSummary" />
                <button class="heavy" name="register-submit" value="submit">Submit</button>
            </div>
        </form>
    </div>
</div>