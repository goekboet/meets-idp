@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@namespace Ids.Unregister
@model EmailVerificationCode

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="root-view">
    <div class="content heavy">
        <h1>Delete your account</h1>
    </div>
    <div class="content light">
        <h2>Verify</h2>
        <form asp-controller="Unregister" asp-action="Delete" method="POST">
            <input type="hidden" asp-for="UserId" />
            <div class="forminput">
                <label asp-for="Code" class="control-label"></label>
                <input class="form-control" placeholder="Code" asp-for="Code" autofocus>
                <span asp-validation-for="Code"></span>
            </div>
            <div class="formbuttons">
                <partial name="_ValidationSummary" />
                <button class="heavy" name="register-submit" value="submit">Submit</button>
            </div>
        </form>
    </div>
</div>