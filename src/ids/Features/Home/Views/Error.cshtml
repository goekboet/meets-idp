@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Ids.Home
@model ErrorDescription

@{
    var error = Model?.Error?.Error;
    var errorDescription = Model?.Error?.ErrorDescription;
    var request_id = Model?.Error?.RequestId;
}

<div class="root-view">
    <div class="content heavy">
        <h1>Technical error</h1>
    </div>
    <div class="content light">
        <h2>Something went wrong. You can always try again. If you encounter this page repeatedly please make a note of the details on this page and contact webmaster.</h2>
        @if (error != null)
        {
            if (errorDescription != null)
            {
                <p>@errorDescription</p>
            }
        }
        @if (request_id != null)
        {
            <p>Request Id: @request_id</p>
        }
    </div>
</div>