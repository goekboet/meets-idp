@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@namespace Ids.Forgot
@model ResetInput

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="root-view">
    <div class="content heavy">
        <h1>Forgot my password</h1>
    </div>
    <div class="content light">
        <h2>What's your e-mail?</h2>
        <p>Provide the email you use for the account. We will send you an email with further instructions on how to reset your password.</p>
        <form asp-controller="Forgot" asp-action="Reset" method="POST">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="forminput">
                <label asp-for="Email" class="control-label"></label>
                <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="formbuttons">
                <button class="heavy" name="forgot-submit" value="submit">Submit</button>
            </div>
        </form>
    </div>
</div>