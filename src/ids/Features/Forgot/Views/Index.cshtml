@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@namespace Ids.Forgot
@model ResetInput

@{
    Layout = "~/Layout/MaterialUi.cshtml";
}

<h1>Forgot</h1>
<h5>What's your e-mail?</h5>
<p>Provide the email you use for the account. We will send you an email with further instructions on how to reset your
    password.</p>
<form 
    class="section"
    asp-controller="Forgot" 
    asp-action="Reset" 
    method="POST">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="input-field">
        <i class="material-icons prefix">email</i>
        <input type="email" placeholder="Email" class="validate" asp-for="Email" tabindex="1" autofocus>
        <label class="active" asp-for="Email">Email</label>
        <span class="helper-text" asp-validation-for="Email"></span>
    </div>
    <button class="btn" name="forgot-submit" value="submit">Submit</button>
</form>
