@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@namespace Ids.Register
@model RegistrationRequest

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="root-view">
    <div class="content heavy">
        <h1>Register</h1>
    </div>
    <div class="content light">
        <h2>What's your e-mail?</h2>
        <p>We will send you a welcome e-mail with instructions on how to activate your account. </p>
        <form asp-controller="Register" asp-action="RequestEmailVerification" method="POST">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="forminput">
                <label asp-for="Email" class="control-label"></label>
                <input type="text" class="form-control" placeholder="Email" asp-for="Email" autofocus>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="formbuttons">
                <button class="heavy" name="register-submit" value="submit">Submit</button>
            </div>
        </form>
    </div>
</div>