@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@namespace Ids.Register
@model RegistrationRequest

@{
    Layout = "~/Layout/MaterialUi.cshtml";
}

<h1>Register</h1>
<ul class="collection profile-completion">
    <li class="collection-item">
        <i class="material-icons">chevron_right</i>
        <label class="name">Email:</label>
        <label class="status">not added</label>
    </li>
    <li class="collection-item">
        <i class="material-icons">check_box_outline_blank</i>
        <label class="name">Password:</label>
        <label class="status">not added</label>
    </li>
    <li class="collection-item">
        <i class="material-icons">check_box_outline_blank</i>
        <label class="name">Name:</label>
        <label class="status">not added</label>
    </li>
    <li class="collection-item">
        <i class="material-icons">check_box_outline_blank</i>
        <label class="name black-text">Profile complete</label>
    </li>
</ul>
<h5>What's your e-mail?</h5>
<p>We will send you a welcome e-mail with instructions on how to activate your account. </p>
<form 
    class="section" 
    asp-controller="Register" 
    asp-action="RequestEmailVerification" 
    method="POST">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="input-field">
        <i class="material-icons prefix">email</i>
        <input type="email" placeholder="Email" class="validate" asp-for="Email" tabindex="1" autofocus>
        <label class="active" asp-for="Email">Email</label>
        <span class="helper-text" asp-validation-for="Email"></span>
    </div>
    <button class="btn" type="submit" name="login_submit" tabindex="2">Submit</button>
</form>