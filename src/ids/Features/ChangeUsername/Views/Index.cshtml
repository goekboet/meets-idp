@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@namespace Ids.ChangeUsername
@model ChangeUsernameInput

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="root-view">
    <div class="content heavy">
        <h1>Change email</h1>
    </div>
    <div class="content light">
        <h2>What's the new email?</h2>
        <form asp-controller="ChangeUsername" asp-action="Verify" method="POST">
            <div class="forminput">
                <label asp-for="NewUsername" class="control-label"></label>
                <input class="form-control" placeholder="New email" asp-for="NewUsername" autofocus>
                <span asp-validation-for="NewUsername"></span>
            </div>
            <div class="formbuttons">
                <partial name="_ValidationSummary" />
                <button class="heavy" name="forgot-submit" value="submit">Submit</button>
            </div>
        </form>
    </div>
</div>