@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@namespace Ids.ChangeUsername
@model VerifiedChangeUsernameInput

@{
    Layout = "~/Layout/MaterialUi.cshtml";
}

<h1>Change email</h1>
<ul class="collection profile-completion">
    <li class="collection-item">
        <i class="material-icons">chevron_right</i>
        <label class="name">Email:</label>
        <label class="status truncate" >@Model.CurentUsername (verified)</label>
    </li>
    <li class="collection-item">
        <i class="material-icons">check_box</i>
        <label class="name">Password:</label>
        <label class="status" >added</label>
    </li>
    <li class="collection-item">
        <i class="material-icons">check_box</i>
        <label class="name">Name:</label>
        <label class="status" >added</label>
    </li>
    <li class="collection-item">
        <i class="material-icons">chevron_right</i>
        <label class="name black-text">Profile complete</label>
    </li>
</ul>
<h5>Paste the change-email token</h5>
<form 
    class="section" 
    asp-controller="ChangeUsername" 
    asp-action="Change" 
    method="POST">
    <input type="hidden" asp-for="NewUsername" />
    <div class="input-field">
        <i class="material-icons prefix">lock_open</i>
        <textarea class="materialize-textarea" type="text" placeholder="Token" class="validate" asp-for="Code" tabindex="1" autofocus></textarea>
        <label asp-for="Code">Token</label>
        <span asp-validation-for="Code" class="helper-text"></span>
    </div>
    <button class="btn" name="register-submit" value="submit">Submit</button>
    <a class="btn-flat" asp-controller="ProfileSpa" asp-action="Index" asp-route-returnUrl="@Model.ReturnUrl"> Cancel</a>
</form>
